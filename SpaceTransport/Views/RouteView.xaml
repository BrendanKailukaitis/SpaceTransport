<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModels="clr-namespace:SpaceTransport.Scripts.ViewModels" x:Class="SpaceTransport.Views.RouteView"
        mc:Ignorable="d"
        Title="RouteView" Height="450" Width="800">
    <Window.DataContext>
        <ViewModels:RouteViewModel/>
    </Window.DataContext>
    <Grid Margin="0,0,0,-3" Height="420">
        <Viewbox Margin="10,10,632,10" Stretch="Fill">
            <Grid Height="400" Width="150">
                <ListView HorizontalAlignment="Left" Margin="0,25,0,0" Width="150" ItemsSource="{Binding Routes}" Height="375" SelectedItem="{Binding SelectedRoute}"/>
                <Label Content="Routes" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="150" Padding="5,0"/>

            </Grid>
        </Viewbox>
        <Button Content="Create New Route" HorizontalAlignment="Left" Margin="682,390,0,0" VerticalAlignment="Top" Command="{Binding OpenRouteCreationView, Mode=OneWay}" Height="20" Width="100"/>

    </Grid>
</Window>
